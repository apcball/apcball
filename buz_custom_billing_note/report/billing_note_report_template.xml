<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_billing_note_document">
        <t t-call="web.basic_layout">
            <!-- Style section -->
            <t t-set="style">
                @font-face {
                    font-family: 'Sarabun-Bold';
                    src: url('/buz_custom_billing_note/static/fonts/Sarabun-Bold.ttf') format('truetype');
                    font-weight: bold;
                    font-style: normal;
                    font-size: 20px;
                }
                body {
                    margin: 0;
                    padding: 0;
                }
                 .info-box {
                    background-color: #f8f9fa !important;
                    color: black !important;
                    font-size: 20px !important;
                    border: 1px solid #000 !important;
                    padding: 10px;
                }
                .table td, .table th {
                    border-left: 0.5px solid #000 !important;
                    border-right: 0.5px solid #000 !important;
                    border-top: none !important;
                    border-bottom: none !important;
                    padding: 4px;
                }
                .table thead th {
                    border-top: 0.5px solid #000 !important;
                    border-bottom: 0.5px solid #000 !important;
                }
                .table tfoot td {
                    border-top: 0.5px solid #000 !important;
                }
                .bordered {
                    border: 1px solid #000;
                    padding: 10px;
                    margin-bottom: 10px;
                    height: 4cm;
                }
                .flex-container {
                    display: flex;
                    justify-content: space-between;
                }
                .flex-item {
                    flex: 1;
                    margin: 0 5px;
                }
                body, div, p, span, td, th {
                    font-family: 'Sarabun-Bold', sans-serif;
                }
            </t>
            <style t-out="style"/>

            <div class="page" style="padding-top: 0;">
                <!-- Header Section -->
                <div class="row mb-2" style="padding-top: 0;">
                    <div class="col-8">
                        <div style="font-size: 20px;">
                            <div class="mb-1"><strong>บริษัท โมเก้น จำกัด (สำนักงานใหญ่)</strong></div>
                            <div style="font-size: 18px;">9 หมู่ 12 ตําบลบึงคําพรอย อําเภอลําลูกกา จ.ปทุมธานี 12150</div>
                            <div style="font-size: 18px;">เลขที่ประจําตัวผูเสียภาษี 0105547076103</div>
                            <div style="font-size: 18px;">โทร 02 1509710 E-mail: contact@mogen.co.th</div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" 
                             style="width: 180px; height: auto;"/>
                    </div>
                </div>

                <!-- Document Title -->
                <div class="text-center mb-4">
                    <h2 style="font-size: 25px; margin: 0;">
                        <t t-if="doc.note_type == 'receivable'">ใบวางบิล</t>
                        <t t-else="">ใบรับวางบิล</t>
                    </h2>
                </div>

                <!-- Partner and Document Info -->
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="info-box" style="height: 180px;">
                                    <div class="mb-2">
                                        <strong style="width: 15%; display: inline-block;">นามผู้ซื้อ:</strong>
                                        <span t-field="doc.partner_id.name"/>
                                    </div>                                  
                                    <div class="mb-2">
                                        <strong style="width: 10%; display: inline-block;">ที่อยู่:</strong>
                                            <span t-field="doc.partner_id.street"/> <span t-field="doc.partner_id.street2"/>
                                            <br/>
                                            <span t-field="doc.partner_id.city"/> 
                                            <span t-field="doc.partner_id.zip"/>
                                    </div>
                                    <div class="mb-2">
                                        <strong style="width: 15%; display: inline-block;">ชื่อผู้ติดต่อ:</strong>
                                        <span t-esc="doc.partner_id.child_ids.filtered(lambda r: r.type == 'contact')[:1].name or ''"/>
                                    </div>
                                    <div class="mb-2">
                                        <div style="width: 60%;">
                                            <strong style="width: 14%; display: inline-block;">โทร:</strong>
                                            <span t-esc="doc.partner_id.phone or doc.partner_id.mobile or ''"/>
                                        </div>
                                    </div>
                                    
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="info-box" style="height: 180px;">
                                    <div class="mb-2">
                                        <strong style="width: 10%; display: inline-block;">เลขที่:</strong>
                                        <span t-field="doc.name"/>
                                    </div>
                                    <div class="mb-2">
                                        <strong style="width: 10%; display: inline-block;">วันที่:</strong>
                                            <span t-field="doc.date" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </div>
                                     <div class="mb-2">
                                        <strong style="width: 35%; display: inline-block;">วันครบกำหนดชำระเงิน:</strong>
                                            <span t-field="doc.due_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </div>
                                    <div class="mb-2">
                                        <strong style="width: 35%; display: inline-block;">เงื่อนไขการชำระเงิน:</strong>
                                           <span t-field="doc.invoice_ids[0].invoice_payment_term_id.name" t-if="doc.invoice_ids"/>
                                    </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Table -->
                <table class="table table-sm" style="border: 1px solid #000; font-size: 20px;">
                    <thead>
                        <tr>
                            <th style="width: 5%; text-align: center;">ลำดับ</th>
                            <th style="width: 30%; text-align: center;">เลขที่ใบกำกับภาษี</th>
                            <th style="width: 10%; text-align: center;">วันที่เอกสาร</th>
                            <th style="width: 10%; text-align: center;">วันครบกำหนด</th>
                            <th style="width: 20%; text-align: center;">จำนวนเงิน</th>
                            <th style="width: 10%; text-align: center;">ภาษีมูลค่าเพิ่ม</th>
                            <th style="width: 15%; text-align: center;">รวมทั้งสิ้น</th>
                        </tr>    
                    </thead>
                    <tbody>
                        <t t-set="line_number" t-value="1"/>
                        <tr t-foreach="doc.invoice_ids" t-as="inv">
                            <td class="text-center">
                                <span t-esc="line_number"/>
                                <t t-set="line_number" t-value="line_number + 1"/>
                            </td>
                            <td>
                                <span t-field="inv.name"/>
                            </td>
                            <td><span t-field="inv.invoice_date"/></td>
                            <td><span t-field="inv.invoice_date_due"/></td>
                            <td class="text-right"><span t-field="inv.amount_untaxed" t-options='{"widget": "float", "precision": 2}'/></td>
                            <td class="text-right"><span t-field="inv.amount_tax" t-options='{"widget": "float", "precision": 2}'/></td>
                            <td class="text-right"><span t-field="inv.amount_total" t-options='{"widget": "float", "precision": 2}'/></td>
                        </tr>
                        <tr style="height: 1cm;">
                            <td colspan="4" style="border-bottom: none !important; border-left: 0.5px solid #000 !important; border-right: 0.5px solid #000 !important;"></td>
                            <td class="text-right" style="border-bottom: none !important; border-left: 0.5px solid #000 !important; border-right: 0.5px solid #000 !important;"></td>
                            <td class="text-right" style="border-bottom: none !important; border-left: 0.5px solid #000 !important; border-right: 0.5px solid #000 !important;"></td>
                            <td class="text-right" style="border-bottom: none !important; border-left: 0.5px solid #000 !important; border-right: 0.5px solid #000 !important;"></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-right"><strong>รวมทั้งสิ้น</strong></td>
                            <td class="text-right">
                                <strong t-esc="sum(doc.invoice_ids.mapped('amount_untaxed'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td class="text-right">
                                <strong t-esc="sum(doc.invoice_ids.mapped('amount_tax'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td class="text-right">
                                <strong t-esc="sum(doc.invoice_ids.mapped('amount_total'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                        </tr>
                    </tfoot>
                </table>

                <!-- Signature Section -->
                <div class="row mt-5" style="font-size: 20px;">
                    <div class="col-6">
                        <div class="text-center">
                            <p>ชื่อผู้รับวางบิล: _______________________</p>
                            <p>วันที่รับ: ____/____/____</p>
                            <p>วันที่รับชำระ ____/____/____</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <p>ในนามบริษัท โมเก้น จำกัด</p>
                            <p>ชื่อผู้รับวางบิล: ______________________</p>
        
                            <p>วันที่: ____/____/____</p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_billing_note">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="buz_custom_billing_note.report_billing_note_document"/>
            </t>
        </t>
    </template>
</odoo>