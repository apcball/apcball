<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define Paper Format -->
    <record id="paperformat_purchase_order" model="report.paperformat">
        <field name="name">Purchase Order A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">8</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Template -->
    <template id="report_purchaseorder_document_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                   <div class="page">

                        <style>
                            @page {
                                margin-top: 0mm;
                                margin-bottom: 10mm;
                                margin-left: 10mm;
                                margin-right: 10mm;
                            }
                            
                            body, .page, .row {
                                margin-top: 0 !important;
                                padding-top: 0 !important;
                            }
                            
                            html, body, page, table, th, td, div, p, span, h1, h2, h3, h4, h5, h6 {
                                font-family: 'Sarabun', sans-serif !important;
                                font-size: 20px;
                            }
                            
                            .table {
                                border-collapse: collapse !important;
                                width: 100%;
                            }
                            
                            .table td,
                            .table th {
                                border-width: 0.5px !important;
                                border-style: solid !important;
                                border-color: #000 !important;
                                padding:  1px 1px;
                            }

                            .order-line-table th,
                            .order-line-table td {
                                padding-top: 10px !important;
                                padding-bottom: 10px !important;
                               line-height: 1.1 !important;
                            }
                            
                            .no-inner-borders td,
                            .no-inner-borders th {
                                border: none !important;
                            }
                            
                            .table-bordered,
                            .table-bordered td,
                            .table-bordered th {
                                border: none !important;
                            }

                            .page {
                                page-break-after: always;
                            }
                            .page:last-child {
                                page-break-after: auto;
                            }

                            .page-break {
                                page-break-after: always;
                              }

                            .vendor-info, .delivery-info {
                                font-size: 14px;
                            }

                            
                        </style>
    <!-- Order Lines - Refactored: Loop only once, paginated in one loop -->
    <t t-set="line_count" t-value="len(o.order_line)"/>
    <t t-set="lines_per_page" t-value="7"/>
    <t t-set="total_pages" t-value="int((line_count + lines_per_page - 1) / lines_per_page)"/>
    <t t-foreach="range(total_pages)" t-as="page_num">
        <div t-attf-style="#{page_num > 0 and 'page-break-before: always;' or ''}">

            

            <!-- ส่วนหัว (Header) -->
            <div class="row mb-2">
                <div class="col-8">
                    <div style="font-size: 16px;">
                        <div class="mb-1"><strong>บริษัท โมเก้น จำกัด (สำนักงานใหญ่)</strong></div>
                        <div style="font-size: 14px;">9 หมู่ 12 ตำบลบึงคำพร้อย อำเภอลำลูกกา จ.ปทุมธานี 12150</div>
                        <div style="font-size: 14px;">เลขที่ประจำตัวผู้เสียภาษี 0105547076103</div>
                        <div style="font-size: 14px;">โทร 02 1509710 แฟกซ์ 02 1528803 E-mail: contact@mogen.co.th</div>
                    </div>
                </div>
                <div class="col-4 text-end">
                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                         style="width: 180px; height: auto; object-fit: contain;" alt="Company Logo"/>
                </div>
            </div>

            <!-- Document Title -->
            <div class="row mb-2">
                <div class="col-12 text-center">
                    <h2 style="margin: 0; padding: 0; font-weight: bold; font-size: 20px; margin-top: 10px;">ใบสั่งซื้อ / PURCHASE ORDER</h2>
                </div>
            </div>

            <!-- Document Info -->
            <div class="row mb-2">
                <div class="col-8">
                    <p style="margin-bottom: 0; margin-top: 20px; font-size: 16px;">กรุณาแนบใบสั่งซื้อทุกครั้งที่ส่งของและวางบิล</p>
                </div>
                <div class="col-4">
                    <div class="text-end" style="font-size: 14px;">
                        <div>เลขที่/NO.: <strong><span t-field="o.name"/></strong></div>
                        <div>วันที่/DATE: <strong><span t-field="o.date_order" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></strong></div>
                        <div>หน้า/PAGE: <t t-esc="page_num + 1"/> / <t t-esc="total_pages"/></div>
                    </div>
                </div>
            </div>

            <!-- กล่องนอก -->
            <div style="width: 100%; border: 1px solid #000; padding: 0; font-size: 16px; box-sizing: border-box; margin-bottom: 6px;">
                <div style="display: flex; gap: 0;">

                    <!-- ฝั่งซ้าย: 40% -->
                    <div style="width: 40%; padding: 0; box-sizing: border-box; border-right: 1px solid #000;">
                        <div class="mb-1" style="margin-bottom:0; padding: 0.5px 2px;">
                            <strong style="display: inline-block; width: 35%;">ผู้ขาย/VENDOR:</strong>
                            <span t-field="o.partner_id.name"/>
                        </div>
                        <div class="mb-1" style="margin-bottom:0; padding: 0.5px 2px;">
                            <strong style="display: inline-block; width: 35%;">ที่อยู่/ADDRESS:</strong>
                            <span t-field="o.partner_id.street"/>
                            <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                        </div>
                        <div class="mb-1" style="margin-bottom:0; padding: 0.5px 2px;">
                            <strong style="display: inline-block; width: 35%;">เลขประจำตัวผู้เสียภาษี:</strong>
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <div class="mb-1" style="margin-bottom:0; padding: 0.5px 2px;">
                            <strong style="display: inline-block; width: 35%;">โทรศัพท์/TEL:</strong>
                            <span t-field="o.partner_id.phone"/>
                        </div>
                        <div class="mb-1" style="margin-bottom:0; padding: 0.5px 2px;">
                            <strong style="display: inline-block; width: 35%;">อีเมล/EMAIL:</strong>
                            <span t-field="o.partner_id.email"/>
                        </div>
                    </div>

                    <!-- ฝั่งขวา: 60% -->
                    <div style="width: 60%; padding: 1; box-sizing: border-box;">
                        <table style="width: 100%; border-collapse: collapse; margin: 1;">
                            <tbody>
                                <!-- บรรทัดที่ 1 -->
                                <tr>
                                    <td style="width: 40%; border-bottom: 1px solid #000; padding: 0.5px 2px;" colspan="2">
                                        <strong>สถานที่ส่ง:</strong>
                                        <span t-field="o.picking_type_id.warehouse_id.partner_id.name"/>
                                        <br/>
                                        <span t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                                        <br/>
                                        <span t-field="o.picking_type_id.warehouse_id.partner_id.street2"/>
                                    </td>
                                    <td style="width: 60%; border-left: 1px solid #000; border-bottom: 1px solid #000; padding: 0.5px 2px;" colspan="2">
                                        <strong>ผู้ขายยืนยันรับ:</strong>
                                        <br/><br/><br/>
                                    </td>
                                </tr>
                                <!-- บรรทัดที่ 2 -->
                                <tr>
                                    <td style="width: 40%; border-bottom: 1px solid #000; padding: 0.5px 2px;" colspan="2">
                                        <strong>แผนกที่ขอซื้อ:</strong>
                                        <t t-if="o.department_name">
                                            <span t-esc="o.department_name"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="width: 60%;border-bottom: 1px solid #000; border-left: 1px solid #000; padding: 0.5px 2px;" colspan="2">
                                        <strong>วันที่:</strong>
                                        <span t-esc="o.date_order.strftime('%d/%m/%Y')"/>
                                    </td>
                                </tr>
                                <!-- บรรทัดที่ 3 -->
                                <tr>
                                    <td style="width: 32%; border-bottom: 1px ; border-left: 1px solid #fff; padding: 0.5px 1px;">
                                        <strong>ผู้ติดต่อ:</strong> <span t-field="o.user_id.name"/>
                                    </td>
                                    <td style="width: 38%; border-bottom: 1px ; border-left: 1px solid #000; padding: 0.5px 1px;">
                                        <strong>ใบขอซื้อเลขที่:</strong> <span t-field="o.name"/>
                                    </td>
                                    <td style="width: 18%; border-bottom: 1px ; border-left: 1px solid #000; padding: 0.5px 1px;">
                                        <strong>Credit:</strong> <span t-field="o.partner_id.credit_limit"/>
                                    </td>
                                    <td style="width: 12%; border-bottom: 1px ; border-left: 1px solid #000; padding: 0.5px 1px;">
                                        <strong>เงื่อนไขฯ:</strong>
                                        <br/><br/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <table class="table table-sm mt-4 order-line-table" style="border-collapse: collapse; width: 100%; margin-bottom: 4px;">
                <thead>
                    <tr>
                        <th style="width: 4%; text-align: center; border: 1px solid black; padding: 1px 2px;">ลำดับ<br/><span style="font-size: 16px;">(No)</span></th>
                        <th style="width: 10%; text-align: center; border: 1px solid black; padding: 1px 2px;">รหัสสินค้า<br/><span style="font-size: 16px;">(Item No)</span></th>
                        <th style="width: 20%; text-align: center; border: 1px solid black; padding: 1px 2px;">รายการสินค้า<br/><span style="font-size: 16px;">(Description)</span></th>
                        <th style="width: 10%; text-align: center; border: 1px solid black; padding: 1px 2px;">วันที่ส่ง<br/><span style="font-size: 16px;">(Delivery Date)</span></th>
                        <th style="width: 8%; text-align: center; border: 1px solid black; padding: 1px 2px;">จำนวน<br/><span style="font-size: 16px;">(Qty)</span></th>
                        <th style="width: 8%; text-align: center; border: 1px solid black; padding: 1px 2px;">หน่วย<br/><span style="font-size: 16px;">(Unit)</span></th>
                        <th style="width: 10%; text-align: center; border: 1px solid black; padding: 1px 2px;">ราคา/หน่วย<br/><span style="font-size: 16px;">(Unit Price)</span></th>
                        <th style="width: 8%; text-align: center; border: 1px solid black; padding: 1px 2px;">ส่วนลด<br/><span style="font-size: 16px;">(Discount)</span></th>
                        <th style="width: 12%; text-align: center; border: 1px solid black; padding: 1px 2px;">จำนวนเงิน<br/><span style="font-size: 16px;">(Amount)</span></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="start_idx" t-value="page_num * lines_per_page"/>
                    <t t-set="end_idx" t-value="min((page_num + 1) * lines_per_page, line_count)"/>
                    <t t-set="current_line_number" t-value="start_idx + 1"/>
                    <t t-foreach="enumerate(o.order_line[start_idx:end_idx])" t-as="line_tuple">
                        <tr style="font-size: 18px;">
                            <td style="text-align: center; border: 1px solid black; background-color: #f9f9f9; padding: 1px 2px;">
                                <span t-esc="current_line_number + line_tuple[0]"/>
                            </td>
                            <td style="border: 1px solid black; padding: 1px 2px;"><span t-field="line_tuple[1].product_id.default_code"/></td>
                            <td style="border: 1px solid black; padding: 1px 2px;"><span t-field="line_tuple[1].product_id.name"/></td>
                            <td style="text-align: center; border: 1px solid black; padding: 1px 2px;">
                                <span t-esc="line_tuple[1].date_planned.strftime('%d/%m/%Y') if line_tuple[1].date_planned else ''"/>
                            </td>
                            <td style="text-align: right; border: 1px solid black; padding: 1px 2px;"><span t-esc="'%.0f' % line_tuple[1].product_uom_qty"/></td>
                            <td style="text-align: center; border: 1px solid black; padding: 1px 2px;"><span t-field="line_tuple[1].product_uom.name"/></td>
                            <td style="text-align: right; border: 1px solid black; padding: 1px 2px;"><span t-esc="'{:,.2f}'.format(line_tuple[1].price_unit)"/></td>
                            <td style="text-align: right; border: 1px solid black; padding: 1px 2px;"><span t-esc="'{:,.2f}'.format(line_tuple[1].discount)"/>%</td>
                            <td style="text-align: right; border: 1px solid black; padding: 1px 2px;">
                                <t t-set="subtotal" t-value="line_tuple[1].product_uom_qty * line_tuple[1].price_unit * (1 - (line_tuple[1].discount or 0.0)/100)"/>
                                <span t-esc="'{:,.2f}'.format(subtotal)"/>
                            </td>
                        </tr>
                    </t>
                    <!-- เติมแถวเปล่าให้ครบ 7 แถวต่อหน้า -->
                    <t t-set="num_lines" t-value="end_idx - start_idx"/>
                    <t t-if="num_lines &lt; lines_per_page">
                        <t t-foreach="range(lines_per_page - num_lines)" t-as="i">
                            <tr class="data-row" style="font-size: 20px; height: 50px; line-height: 50px;">
                                <td style="text-align: center;"></td>
                                <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
             <!-- Document Info: อยู่ล่างสุดของแต่ละหน้า (วนลูปแสดงทุกหน้า)-->
                <div style="position: absolute; bottom: 0; left: 0; width: 100%; display: flex; justify-content: space-between; align-items: flex-end; padding: 0 20px 8px 20px;">
                    <div>
                        <p style="margin-bottom: 0; font-size: 16px;">อนุมัติใช้วันที่ 14/09/2563</p>
                    </div>
                    <div>
                        <p style="margin-bottom: 0; font-size: 16px; text-align: right;">FM-PUR-08.REV.01</p>
                    </div>
                </div>
            
        </div>
    </t>

         

                

                        <div style="display: flex; width: 100%; box-sizing: border-box; margin-bottom: 4px;">

                            <!-- ฝั่งซ้าย: หมายเหตุ + จำนวนเงินตัวอักษร (มีกรอบ + พื้นหลัง + ความสูงเท่าฝั่งขวา) -->
                            <div style="width: 60%; padding: 0 4px 0 0; box-sizing: border-box;">
                                <div style="border: 1px solid #000; border-radius: 1px; padding: 8px; min-height: 174px;">
                                    <t t-set="amount_untaxed" t-value="sum([line.product_qty * line.price_unit for line in o.order_line])"/>

                                    <!-- หมายเหตุ -->
                                    <div style="font-size: 22px;">
                                        <strong>หมายเหตุ:</strong>
                                        <div t-if="'note' in o._fields and o.note" style="margin-top: 4px; margin-bottom: 4px;">
                                            <span t-field="o.note"/>
                                        </div>
                                    </div>

                                    <div style="border-top: 1px solid #000; margin-top: 80px; margin-bottom: 2px; width: 100%;"></div>

                                    <!-- จำนวนเงินตัวอักษร -->
                                    <div style="display: flex; flex-wrap: wrap; font-size: 13px; margin-top: 4px;">
                                        <div style="width: 45%; font-weight: bold;">จำนวนเงิน (ตัวอักษร):</div>
                                        <div style="width: 55%; font-weight: bold;">
                                            <span t-field="o.amount_total_text"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ฝั่งขวา: ผลรวม (ตารางมีเส้น แต่ไม่มีกรอบนอก) -->
                            <div style="width: 40%; padding: 0 0 0 2px; box-sizing: border-box;">
                                <t t-set="total_discount" t-value="sum([(line.product_qty * line.price_unit * line.discount/100.0) for line in o.order_line])"/>
                                <t t-set="amount_after_discount" t-value="amount_untaxed - total_discount"/>
                                <t t-set="amount_tax" t-value="amount_after_discount * 0.07"/>
                                <t t-set="amount_total" t-value="amount_after_discount + amount_tax"/>

                                <table style="width: 100%; border-collapse: collapse; font-size: 13px; border: 1px solid #000; margin: 0;">
                                    <tr>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">ราคารวม/Total:</td>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">
                                            <span t-esc="'{:,.2f}'.format(amount_untaxed)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">ส่วนลด/Discount:</td>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">
                                            <span t-esc="'{:,.2f}'.format(total_discount)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">ราคาหลังหักส่วนลด/Net:</td>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">
                                            <span t-esc="'{:,.2f}'.format(amount_after_discount)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">ภาษีมูลค่าเพิ่ม/VAT 7%:</td>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;">
                                            <span t-esc="'{:,.2f}'.format(amount_tax)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;"><strong>รวมทั้งสิ้น/Grand Total:</strong></td>
                                        <td style="text-align: right; padding: 2px 4px; border: 1px solid #000;"><strong>
                                            <span t-esc="'{:,.2f}'.format(amount_total)"/>
                                        </strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    

                        <!-- Signature Section -->
                        <div class="row mt-5" style="margin-top: 10px;">
                            <!-- Common styles for signature boxes -->
                            <style>
                                .signature-box {
                                    font-size: 16px;
                                    text-align: center;
                                    width: 100%;
                                }
                                .signature-content {
                                    height: 120px;
                                    display: flex;
                                    flex-direction: column;
                                    justify-content: flex-end;
                                    align-items: center;
                                    margin-bottom: 10px;
                                }
                                .signature-line {
                                    border-top: 1px solid #000;
                                    margin: 0 auto;
                                    width: 80%;
                                    padding-top: 5px;
                                }
                                .signature-title {
                                    margin: 5px 0;
                                    font-weight: normal;
                                }
                                .signature-date {
                                    margin: 5px 0;
                                }
                                .signature-image {
                                    width: 100px;
                                    height: 60px;
                                    object-fit: contain;
                                    margin-bottom: 5px;
                                }
                                .signature-name {
                                    margin: 0;
                                    line-height: 1.5;
                                }
                            </style>
                            <!-- ผู้จัดทำ -->
                            <div class="col-4">
                                <div class="signature-box">
                                    <div class="signature-content">
                                        <div style="height: 60px;"></div> <!-- Placeholder for signature height -->
                                        <p class="signature-name">
                                            <strong>
                                                <span t-field="o.create_uid.name"/>
                                            </strong>
                                        </p>
                                        <t t-if="o.create_uid.employee_id">
                                            <p class="signature-name">
                                                (<span t-field="o.create_uid.employee_id.name"/>)
                                            </p>
                                        </t>
                                    </div>
                                    <div class="signature-line">
                                        <p class="signature-title">ผู้จัดทำ / Prepared by</p>
                                        <p class="signature-date">
                                            วันที่/Date:
                                            <span t-field="o.create_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- ผู้ตรวจสอบ L1 -->
                            <div class="col-4">
                                <div class="signature-box">
                                    <div class="signature-content">
                                        <t t-if="o.l1_approved_by">
                                            <img src="/buz_custom_po/static/img/signature1.jpg" class="signature-image"/>
                                            <p class="signature-name">
                                                (พรเพ็ชร วสันตกิจกำจร)
                                            </p>
                                        </t>
                                        <t t-if="not o.l1_approved_by">
                                            <div style="height: 60px;"></div> <!-- Empty space for signature -->
                                            <p class="signature-name"></p>
                                        </t>
                                    </div>
                                    <div class="signature-line">
                                        <p class="signature-title">ผู้ตรวจสอบ / Checked by</p>
                                        <p class="signature-date">
                                            วันที่/Date:
                                            <t t-if="o.l1_approved_date">
                                                <span t-field="o.l1_approved_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/>
                                            </t>
                                            <t t-if="not o.l1_approved_date"></t>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- ผู้อนุมัติ L2 -->
                            <div class="col-4">
                                <div class="signature-box">
                                    <div class="signature-content">
                                        <t t-if="o.l2_approved_by">
                                            <img src="/buz_custom_po/static/img/signature2.jpg" class="signature-image"/>
                                            <p class="signature-name">
                                                (นภัคสรณ์ วชิรพันธ์วิชาญ)
                                            </p>
                                        </t>
                                        <t t-if="not o.l2_approved_by">
                                            <div style="height: 60px;"></div> <!-- Empty space for signature -->
                                            <p class="signature-name"></p>
                                        </t>
                                    </div>
                                    <div class="signature-line">
                                        <p class="signature-title">ผู้อนุมัติ / Approved by</p>
                                        <p class="signature-date">
                                            วันที่/Date:
