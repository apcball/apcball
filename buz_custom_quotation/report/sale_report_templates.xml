<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_buz_quotation" model="report.paperformat">
        <field name="name">BUZ List Price A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_saleorder_buz" model="ir.actions.report">
        <field name="name">List Price</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">buz_custom_quotation.report_saleorder_buz</field>
        <field name="report_file">buz_custom_quotation.report_saleorder_buz</field>
        <field name="paperformat_id" ref="paperformat_buz_quotation"/>
        <field name="print_report_name">'List Price - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_saleorder_buz">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="article o_report_layout_standard">
                    <div class="page">
                        <style>
                            .page {
                                font-family: 'Sarabun', sans-serif;
                                padding: 0;
                                margin: 0;
                            }
                            .header-image {
                                width: 100%;
                                margin-bottom: 20px;
                                margin-left: -7px;
                                margin-right: -7px;
                            }
                            .header-image img {
                                width: 100%;
                                display: block;
                            }
                            .table th {
                                background-color: #f8f9fa;
                                color: #000000;
                                font-weight: bold;
                                border: 1px solid #000;
                                text-align: center;
                                vertical-align: middle;
                                padding: 8px;
                            }
                            .table td {
                                border: 1px solid #000;
                                padding: 8px;
                                vertical-align: middle;
                            }
                            .doc-title {
                                font-size: 24px;
                                font-weight: bold;
                                text-align: center;
                                margin-bottom: 20px;
                            }
                            .project-name {
                                font-size: 18px;
                                text-align: center;
                                margin-bottom: 20px;
                            }
                            .doc-info {
                                margin-bottom: 20px;
                            }
                            .signature-section {
                                margin-top: 50px;
                            }
                            .content-wrapper {
                                padding: 15px;
                            }
                        </style>

                        <!-- Header Image -->
                        <div class="header-image">
                            <img src="/buz_custom_quotation/static/img/cover/Header3.png"/>
                        </div>

                        <div class="content-wrapper">
                            <!-- Document Title -->
                            <div class="doc-title">
                                เอกสารประกอบใบเสนอราคา / List Price
                            </div>

                            <!-- Project Name if exists -->
                            <div t-if="doc.project_name" class="project-name">
                                โครงการ / Project: <span t-field="doc.project_name"/>
                            </div>

                            <!-- Document Info -->
                            <div class="doc-info row">
                                <div class="col-6">
                                    <strong>เลขที่เอกสาร / Document No: </strong>
                                    <span t-field="doc.name"/>
                                </div>
                                <div class="col-6 text-end">
                                    <strong>วันที่ / Date: </strong>
                                    <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                                </div>
                            </div>

                            <!-- Product Table -->
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">NO.</th>
                                        <th style="width: 15%">BRAND</th>
                                        <th style="width: 15%">MODEL</th>
                                        <th style="width: 35%">DESCRIPTION</th>
                                        <th style="width: 15%">UNIT PRICE</th>
                                        <th style="width: 15%">REMARK</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.order_line" t-as="line">
                                        <td class="text-center"><span t-esc="line_index + 1"/></td>
                                        <td><span t-field="line.product_id.x_studio_brand"/></td>
                                        <td><span t-field="line.product_id.x_studio_model"/></td>
                                        <td><span t-field="line.name"/></td>
                                        <td class="text-right">
                                            <span t-field="line.price_unit" 
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Note Section -->
                            <div class="mt-4">
                                <strong>หมายเหตุ / Remark:</strong>
                                <ol>
                                    <li>ราคาข้างต้นเป็นราคาที่ยังไม่รวมภาษีมูลค่าเพิ่ม 7% / Above prices are excluded VAT 7%</li>
                                    <li>ราคาอาจมีการเปลี่ยนแปลงโดยไม่ต้องแจ้งให้ทราบล่วงหน้า / Prices are subject to change without prior notice</li>
                                </ol>
                            </div>

                            <!-- Signatures -->
                            <div class="row signature-section">
                                <div class="col-4 text-center">
                                    <p>_____________________</p>
                                    <p>ผู้จัดทำ / Prepared By</p>
                                    <p>วันที่ / Date: ____</p>
                                </div>
                                <div class="col-4 text-center">
                                    <p>_____________________</p>
                                    <p>ผู้ตรวจสอบ / Checked By</p>
                                    <p>วันที่ / Date: ____</p>
                                </div>
                                <div class="col-4 text-center">
                                    <p>_____________________</p>
                                    <p>ผู้อนุมัติ / Approved By</p>
                                    <p>วันที่ / Date: ____</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>