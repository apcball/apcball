<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define Paper Format for Check -->
    <record id="paperformat_thai_check" model="report.paperformat">
        <field name="name">Thai Check</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">80</field>
        <field name="page_width">215</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <!-- Define Report Action -->
    <record id="action_report_check_thai" model="ir.actions.report">
        <field name="name">Print Check (Thai)</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">buz_thai_check_layout.print_check_custom</field>
        <field name="report_file">buz_thai_check_layout.print_check_custom</field>
        <field name="print_report_name">'Check - %s' % object.name</field>
        <field name="paperformat_id" ref="paperformat_thai_check"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
    </record>

    <template id="print_check_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page" style="margin: 0; padding: 0;">
                        <style>
                            @font-face {
                                font-family: 'THSarabunNew';
                                src: url('/buz_thai_check_layout/static/fonts/THSarabunNew.ttf') format('truetype');
                            }
                             body {
                                font-family: 'THSarabunNew', sans-serif;
                                margin: 0;
                                padding: 0;
                            }
                            .check-body {
                                position: relative;
                                width: 215mm;
                                height: 80mm;
                                margin: 0;
                                padding: 0;
                            }
                            .partner-bank {
                                position: absolute;
                                top: 0;
                                right: 0;
                                font-size: 20px;
                                margin: 0;
                                padding: 0;
                            }
                            .partner-bank span {
                                display: inline-block;
                                margin: 0 0.4em;
                            }
                            .ac-payee {
                                position: absolute;
                                top: 0.1in;
                                left: 50%;
                                transform: translateX(-50%);
                                font-size: 25px;
                                font-weight: bold;
                                text-decoration: underline;
                                text-align: center;
                            }
                            .payee-name {
                                position: absolute;
                                top: 1.2in;
                                left: 0.5in;
                                font-size: 16px;
                            }
                            .amount-text {
                                position: absolute;
                                top: 1.6in;
                                left: 0.5in;
                                font-size: 16px;
                            }
                            .amount-number {
                                position: absolute;
                                top: 2.0in;
                                right: 0.5in;
                                font-size: 18px;
                                font-weight: bold;
                            }
                        </style>

                        <div class="check-body">
                            <!-- เลขที่บัญชีลูกค้า -->
                            <div class="partner-bank">
                                <t t-if="o.partner_id.bank_ids">
                                    <t t-foreach="str(o.partner_id.bank_ids[0].acc_number)" t-as="char">
                                        <span><t t-esc="char"/></span>
                                    </t>
                                </t>
                            </div>

                            <!-- A/C PAYEE -->
                            <div class="ac-payee">A/C PAYEE ONLY</div>

                            <!-- ชื่อผู้รับเงิน -->
                            <div class="payee-name">
                                <span t-field="o.partner_id.name"/>
                            </div>

                            <!-- จำนวนเงินเป็นตัวอักษร -->
                            <div class="amount-text">
                                <span t-esc="o.amount_to_text_thai()"/>
                            </div>

                            <!-- จำนวนเงินเป็นตัวเลข -->
                            <div class="amount-number">
                                **<span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>**
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>