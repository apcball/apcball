<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Subcontractor Tree View -->
        <record id="view_subcontractor_tree" model="ir.ui.view">
            <field name="name">subcontractor.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Subcontractors">
                    <field name="name"/>
                    <field name="subcontractor_type"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="trade_license"/>
                    <field name="license_expiry"/>
                    <field name="rating"/>
                    <field name="project_count"/>
                    <field name="is_subcontractor" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Subcontractor Form View -->
        <record id="view_subcontractor_form" model="ir.ui.view">
            <field name="name">subcontractor.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Subcontractor">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_projects" type="object"
                                    class="oe_stat_button" icon="fa-project-diagram">
                                <field name="project_count" widget="statinfo" string="Projects"/>
                            </button>
                            <button name="action_set_as_subcontractor" type="object"
                                    class="oe_stat_button" icon="fa-check"
                                    string="Set as Subcontractor"
                                    invisible="is_subcontractor == True"/>
                        </div>
                        
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        
                        <div class="oe_title">
                            <field name="name" placeholder="Subcontractor Name" required="1"/>
                            <field name="category_id" widget="many2many_tags" placeholder="Tags"/>
                        </div>
                        
                        <group>
                            <group>
                                <field name="is_subcontractor"/>
                                <field name="subcontractor_type"/>
                                <field name="trade_license"/>
                                <field name="license_expiry"/>
                                <field name="rating"/>
                                <field name="specialization_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="is_company" invisible="1"/>
                                <field name="supplier_rank" invisible="1"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="website"/>
                                <field name="contact_person"/>
                                <field name="emergency_contact"/>
                            </group>
                        </group>
                        
                        <group string="Address">
                            <field name="street" placeholder="Street..."/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        
                        <group string="Statistics" col="3">
                            <field name="project_count"/>
                            <field name="total_contract_value"/>
                            <field name="completed_projects"/>
                        </group>
                        
                        <notebook>
                            <page string="Projects">
                                <field name="project_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date_start"/>
                                        <field name="date"/>
                                        <field name="stage_id"/>
                                        <field name="user_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
