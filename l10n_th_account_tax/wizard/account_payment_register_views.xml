<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Simple view inheritance to add WHT fields -->
    <record id="view_account_payment_register_form_wht" model="ir.ui.view">
        <field name="name">account.payment.register.form.wht</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <!-- Add WHT fields as invisible to ensure they are available -->
            <field name="amount" position="after">
                <field name="wht_tax_id" invisible="1"/>
                <field name="wht_amount_base" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
