<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_leap_res_config_setting_form" model="ir.ui.view">
        <field name="name">view.leap.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="purchase_back_date">
                    <div class="o_setting_left_pane">
                        <field name="l4l_allow_back_date"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="l4l_allow_back_date"/>
                        <p>Allow Backdating In Purchase Order</p>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
