<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Create a unique sequence for mobile service stock pickings -->
        <record id="seq_mobile_service_picking" model="ir.sequence">
            <field name="name">Mobile Service Stock Picking</field>
            <field name="code">mobile.service.picking</field>
            <field name="prefix">MS/PICK/%(year)s/%(month)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/> <!-- Make it available to all companies -->
            <field name="use_date_range" eval="True"/>
        </record>
    </data>
</odoo>
